generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  menuItems   MenuItem[]
}

model MenuItem {
  id          Int             @id @default(autoincrement())
  name        String
  description String?
  price       Float
  categoryID  Int
  category    Category        @relation(fields: [categoryID], references: [id])
  ingredients MenuItemIngredient[]
  images      Image[]         // Relation to Image
}

model MenuItemIngredient {
  menuItemID   Int
  ingredientID Int
  menuItem     MenuItem   @relation(fields: [menuItemID], references: [id])
  ingredient   Ingredient @relation(fields: [ingredientID], references: [id])
  quantity     String?
  unit         String?

  @@id([menuItemID, ingredientID])
}

model Ingredient {
  id                Int                  @id @default(autoincrement())
  name              String
  description       String?
  menuItemIngredient MenuItemIngredient[]
}

model Image {
  id          Int      @id @default(autoincrement())
  menuItemID  Int
  imageURL    String
  title       String?
  description String?
  menuItem    MenuItem @relation(fields: [menuItemID], references: [id])
}

model User {
  id       Int         @id @default(autoincrement())
  username String      @unique
  password String
  email    String?     @unique
  role     String
  sessions Session[]
}

model Session {
  id         Int      @id @default(autoincrement())
  userID     Int
  user       User     @relation(fields: [userID], references: [id])
  sessionStart DateTime
  sessionEnd   DateTime?
}